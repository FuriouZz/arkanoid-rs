{
  "watch": [
    "src",
    "public",
    "examples"
  ],
  "ext": "html,ts,rs",
  "execute": {
    "*.ts": [
      {
        "env": {},
        "args": ["deno", "--allow-read", "--allow-write", "--unstable", "tasks/compile.ts"]
      }
    ],
    "*.rs": [
      {
        "env": {
          "RUSTFLAGS": "--cfg=web_sys_unstable_apis"
        },
        "args": ["cargo", "build", "--target", "wasm32-unknown-unknown", "--example", "arkanoid"]
      },
      {
        "env": {},
        "args": [ "wasm-bindgen", "--out-dir", "target/generated", "--web", "target/wasm32-unknown-unknown/debug/examples/arkanoid.wasm" ]
      }
    ]
  },
  "fullscreen": false,
  "interval": 500
}