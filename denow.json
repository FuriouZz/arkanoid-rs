{
  "watch": [
    "src",
    "public",
    "examples"
  ],
  "ext": "html,ts,rs,vert,frag",
  "skip": "d.ts",
  "execute": {
    "*.ts": [
      {
        "env": {},
        "args": ["deno", "--allow-read", "--allow-write", "--unstable", "tasks/compile.ts"]
      }
    ],
    "*.rs": [
      {
        "env": {
          "RUSTFLAGS": "--cfg=web_sys_unstable_apis"
        },
        "args": ["cargo", "build", "--target", "wasm32-unknown-unknown", "--example", "arkanoid"]
      },
      {
        "env": {},
        "args": [ "wasm-bindgen", "--out-dir", "public/generated", "--web", "target/wasm32-unknown-unknown/debug/examples/arkanoid.wasm" ]
      }
    ],
    "*.vert": [
      {
        "env": {},
        "args": [ "glslc", "${dir}/${base}", "-o", "${dir}/${base}.spv" ]
      },
      {
        "env": {},
        "args": [ "touch", "src/lib.rs" ]
      }
    ],
    "*.frag": [
      {
        "env": {},
        "args": [ "glslc", "${dir}/${base}", "-o", "${dir}/${base}.spv" ]
      },
      {
        "env": {},
        "args": [ "touch", "src/lib.rs" ]
      }
    ]
  },
  "fullscreen": false,
  "interval": 500
}